<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTitle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/largeFont</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/largeSpace</item>
    </style>

    <style name="TextViewChipStyle">
        <item name="android:background">@drawable/background_rounded_corner_radius_20</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/smallFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:paddingLeft">@dimen/mediumSpace</item>
        <item name="android:paddingRight">@dimen/mediumSpace</item>
        <item name="android:paddingTop">@dimen/smallSpace</item>
        <item name="android:paddingBottom">@dimen/smallSpace</item>
    </style>

    <style name="ImageViewActionStyle" parent="">
        <item name="android:background">@drawable/circle_rounded_bg</item>
        <item name="android:backgroundTint">@color/grey_300</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>